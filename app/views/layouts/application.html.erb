<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <nav class="navbar navbar-light bg-faded">
    <%= flash_messages %>

    <!-- Toggle Button -->
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#nav-content">
      &#9776;
    </button>
    <!-- Nav Content -->
    <div class="collapse navbar-toggleable-xs" id="nav-content">
      <a class="navbar-brand" href="/"><%= image_tag 'logo-small' %></a>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="<%= welcome_index_path %>">Sign Up</a>
        </li>
        <li class="nav-item">
          <% if signed_in %>
              <a class="nav-link" href="<%= logout_path %>">Sign out</a>
          <% else %>
            <a class="nav-link" href="<%= welcome_login_path %>">Sign In</a>
          <% end %>
        </li>
        <% if signed_in %>
            <li class="nav-item">
              <a class="nav-link" href="<%= private_messages_path %>">
                Messages (<%= message_count %>)
              </a>
            </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <%= yield %>

</body>
</html>
