
<section class="header-11-sub">
  <div class="background">&nbsp;</div>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <h3>The Chatting Site for Ruby Addicts</h3>
        <p>Inside, Ruby is the official language. English is not allowed!</p>
        <div class="signup-form">
          <%= form_for :user, url: sessions_path do |f| %>
              <div class="form-group">
                <%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
              </div>
              <div class="form-group">
                <div class="half-width">
                  <%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.submit 'Login', class: 'btn btn-block btn-info' %>
              </div>
          <% end %>
        </div>
        <div class="additional-links">By signing up you agree to <a href="#">Terms of Use</a> and <a href="#">Privacy</a></div>
      </div>
      <div class="col-sm-7 col-sm-offset-1 player-wrapper">
        <div class="player">
          <%= image_tag 'hero' %>
        </div>
      </div>
    </div>
  </div>
</section>